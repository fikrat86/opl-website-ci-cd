{
  "family": "opl-website-tas",
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "arn:aws:iam::949848044200:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::949848044200:role/opl-ecs-task-role",
  "networkConfiguration": {
    "awsvpcConfiguration": {
      "subnets": ["subnet-0fb274970de616fd5"],
      "securityGroups": ["sg-0b582fe77b4fb4648"],
      "assignPublicIp": "ENABLED"
    }
  },
  "containerDefinitions": [
    {
      "name": "opl-website-container",
      "image": "949848044200.dkr.ecr.us-east-1.amazonaws.com/my-website:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",
          "awslogs-group": "/ecs/opl-website-tas",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
